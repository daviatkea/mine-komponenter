---
const { as, level } = Astro.props;

const Tag = as;
---

<Tag class="heading" data-level={level}>
  <slot />
</Tag>

<style>
  [data-level="1"] {
    font-size: var(--step-5);
  }
  [data-level="2"] {
    font-size: var(--step-4);
  }
  [data-level="3"] {
    font-size: var(--step-3);
  }
  [data-level="4"] {
    font-size: var(--step-2);
  }
  [data-level="5"] {
    font-size: var(--step-1);
  }
</style>
